---
import Layout from "../layouts/Base.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import LastUpdates from "../components/LastUpdates.astro";
import PixelButton from '../components/PixelButton.astro';
---

<Layout>
  <main>
    <section class='flex h-screen'>
      <div
        class='flex-1 lg:px-12 flex flex-col items-center justify-center'
      >
        <div class=" flex flex-col items-center">
          <h2 class='text-9xl text-center mt-8 font-press-start-2p'>When</h2>
          <p class='text-center text-3xl w-4/5'>
            Sobrevive en un mundo post-apocaliptico donde esconderte es tu unica
            salvacion
          </p>
        </div>
				<div class=" flex gap-8 justify-center items-center flex-wrap mt-12">
					<PixelButton>
						Reservar
          </PixelButton>
          <PixelButton>
            Dejanos un Comentario
          </PixelButton>
				</div>
      </div>
      <div class='flex-1'></div>
    </section>
    <section class="max-w-screen-lg mx-auto">
      <h2 class="text-6xl underline">Actualizaciones</h2>
      <LastUpdates />
    </section>
  </main>
</Layout>
