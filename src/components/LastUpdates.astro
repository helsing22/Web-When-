---
const updates = await Astro.glob("../content/updates/*.mdx");

updates.sort((a, b) => {
  const fechaA = new Date(a.frontmatter.pubDate);
  const fechaB = new Date(b.frontmatter.pubDate);
  return fechaB.getTime() - fechaA.getTime();
});
const lastUpdates = updates.slice(0, 3);
---

<div>
  {
    lastUpdates.map(async (actualizacion) => (
      <article class="mb-12">
        <h3 class="text-4xl">{actualizacion.frontmatter.title}</h3>
        <p class="text-sm font-press-start-2p text-silver-lake-blue">Fecha: {actualizacion.frontmatter.pubDate}</p>
        <div class="text-2xl mt-4">
          <actualizacion.Content />
        </div>
      </article>
    ))
  }
</div>
